<resources>
    <declare-styleable name="CommonButton">
        <!--shape模式-->
        <attr name="cb_shapeMode" format="enum">
            <enum name="rectangle" value="0" />
            <enum name="oval" value="1" />
            <enum name="line" value="2" />
            <enum name="ring" value="3" />
        </attr>
        <!--填充颜色-->
        <attr name="cb_fillColor" format="color" />
        <!--按压颜色-->
        <attr name="cb_pressedColor" format="color" />
        <!--描边颜色-->
        <attr name="cb_strokeColor" format="color" />
        <!--描边宽度-->
        <attr name="cb_strokeWidth" format="dimension" />
        <!--圆角大小-->
        <attr name="cb_cornerRadius" format="dimension" />
        <!--圆角位置-->
        <attr name="cb_cornerPosition">
            <flag name="topLeft" value="1" />
            <flag name="topRight" value="2" />
            <flag name="bottomRight" value="4" />
            <flag name="bottomLeft" value="8" />
        </attr>
        <!--是否开启动效-->
        <attr name="cb_activeEnable" format="boolean" />
        <!--drawable位置-->
        <attr name="cb_drawablePosition" format="enum">
            <enum name="left" value="0" />
            <enum name="top" value="1" />
            <enum name="right" value="2" />
            <enum name="bottom" value="3" />
        </attr>
        <!--渐变开始颜色-->
        <attr name="cb_startColor" format="color" />
        <!--渐变结束颜色-->
        <attr name="cb_endColor" format="color" />
        <!--渐变方向-->
        <attr name="cb_orientation" format="enum">
            <enum name="TOP_BOTTOM" value="0" />
            <enum name="LEFT_RIGHT" value="1" />
        </attr>
    </declare-styleable>
</resources>
